.archive {
  padding: 20px;
  background-color: rgba(255,255,255,0.9);
  border-radius: 5px;
  min-height: 65vh;
  margin-bottom: 20px;
}
.post-archive {
  margin: 0;
  padding-right: 40px;
}
.year-items {
  margin-top: 30px;
  border-top: 1px solid #aaa;
  padding-top: 20px;
}
.archive-items {
  font-size: 16px;
  margin-left: 30px;
  margin-top: 20px;
  color: #666;
}
.archive-items li {
  margin-top: 10px;
  list-style-type: circle;
}
.post-title {
  color: #666;
  margin-left: 5px;
}
.post-title:hover {
  color: rgb(78,161,219);
}
.post-name {
  font-weight: 700;
  color: #333;
  font-size: 22px;
  font-family: sans-serif;
}