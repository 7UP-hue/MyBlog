.archive {
  padding: 20px;
  background-color: rgb(255,255,255);
  box-shadow: 0px 2px 4px 4px #ddd;
  border-radius: 5px;
  min-height: 65vh;
  margin: 20px;
}
.post-archive {
  margin: 0;
  padding-right: 40px;
}
.year-items {
  margin-top: 30px;
  border-top: 1px solid #aaa;
  padding-top: 20px;
}
.archive-items {
  font-size: 16px;
  margin-left: 30px;
  margin-top: 20px;
  color: #aaa;
}
.archive-items li {
  margin-top: 10px;
  list-style-type: circle;
}
.post-title {
  color: #333;
  font-size: 20px;
}
.post-name {
  font-weight: 700;
  color: #777;
  font-size: 22px;
  font-family: sans-serif;
}