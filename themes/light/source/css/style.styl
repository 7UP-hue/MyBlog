html {
  height: 100%;
}
body {
  font-size: 1.25rem;
  line-height: 1.5;
  margin: 0;
  padding: 0;
  height: 100%;
}
.w-bg {
  height: 100vh;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background: radial-gradient(ellipse at bottom, #1b2735 0%, #090a0f 100%);
}
.container {
  min-height: 100%;
  height: auto !important;
  height: 100%;
  position: relative;
  background: #F4F4F4;
}
.layout-body {
  padding-bottom: 100px;
  padding-top: 80px;
  max-width: 974px;
  margin: 0 auto;
}
.layout-footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 100px;
  clear:both;
}
.scroll-top
  position: fixed
  bottom: 40px
  right: 50px
  color: #ccc
  font-size: 30px
  transition: all .5s
  display: none
  cursor pointer
.scroll-top:hover
  transform: scale(1.3)
  color: #3DD9B6
@import "_partial/header";
@import "_partial/index";
@import "_partial/footer";
@import "_partial/archive";
@import "_partial/category";
@import "_partial/tag";
@import "star";
@import "_partial/aside"
