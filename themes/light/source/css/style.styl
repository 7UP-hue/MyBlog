html {
  height: 100%;
}
body {
  font-size: 1.25rem;
  ine-height: 1.5;
  margin: 0;
  padding: 0;
  height: 100%;
}
.w-bg {
  height: 100vh;
  width: 100vw;
  position: fixed;
  top: 0;
  left: 0;
  background: radial-gradient(ellipse at bottom, #1b2735 0%, #090a0f 100%);
  z-index: -10;
}
.container {
  min-height: 100%;
  height: auto !important;
  height: 100%;
  position: relative;
}
.layout-body {
  padding-bottom: 100px;
  padding-top: 80px;
  max-width: 974px;
  margin: 0 auto;
}
.layout-footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 100px;
  clear:both;
}
@import "_partial/header";
@import "_partial/index";
@import "_partial/footer";
@import "_partial/archive";
@import "_partial/category";
@import "_partial/tag";
@import "star";
